<div class="bg-primary d-flex">
  <div class="m-5">
  <h2>Your Best Friends</h2>
    <div class="icon">
      <span class="dot" style="background-color:#393E5B">
        <%= image_tag "icons8-dog-park-100.png", class:"image", alt: "dog image" %>
      </span>
      <div class="card w-75">
      <%= link_to "Add a new Dog!",
              new_dog_path,
              class:"btn btn-primary",
              data: {}
              %>
              </div>
    </div>
  </div>
  <div class="card-container">
    <% @dogs.each do |dog|%>
      <div class="card w-75">
        <div class="card-body">
          <h5 class="card-title"><%= dog.name %></h5>
          <p class="card-text"><%= dog.breed %></p>
          <p class="card-text"><%= dog.id %></p>
        <img src="https://placedog.net/100/100?random" width="100" height="100">
          <div class="d-flex ">
          <%= link_to "Update Details",
              dog_path(dog),
              class:"btn btn-primary",
              data: {}
              %>

          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>


<%# t.bigint "user_id", null: false
    t.string "dog_size"
    t.string "diet"
    t.string "name"
    t.string "breed"
    t.boolean "desexed"
    t.boolean "vaccination_status" %>
