                %>
    <% else %>
        <%= link_to "Register your Dog",
                new_user_registration_path,
                class:"btn-info btn",
                data: {}
                %>
    <%end%>
  </div><!--/card-->





  <div class="card card-floating">
    <div class="icon col d-flex justify-content-center">
    <span class="dot" style="background-color: #FF6053">
      <%= image_tag "icons8-pet-100.png", alt: "dog image" %>
      </span>
      </div><!--/icon-->
    <div class="title">BOOKINGS</div>
    <div class="features">
      <p>
      Need to book in a hurry let us hook you up with a great daycare centre today!
      </p>
    </div><!--/features-->
