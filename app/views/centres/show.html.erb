<div class="container-fluid bg-info" style="padding-top: 40px; padding-bottom: 40px; margin-right: 40px; margin-left: 40px; margin-top: 40px;">
  <div class="row">
    <div class="col-sm d-flex justify-content-center">
      <h2><%= @centre.name %> Doggy Day Care Centre</h2>
    </div>
    <div class="col-sm d-flex justify-content-center">
     <ul>
      <li>Location<%= @centre.location %></li>
      <li><%= @centre.capacity %> Doggy centre</li>
      <li>Call:<%= @centre.phone_number %></li>
      <li>"incredible centre with friendly staff!"</li>
     </ul>
    </div>
    <div class="icon col-sm d-flex justify-content-center">
      <span class="dot" style="background-color:#393E5B">
          <%= image_tag "icons8-dog-park-100.png", class:"image", alt: "dog image" %>
      </span>
    </div>
  </div>

  <div class="container p3">
    <div class="row">
      <div class="col">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#qrShareWithFriendsModal">
          Share with Friends
        </button>
      </div>
      <div class="col-5 d-flex justify-content-center">
        <%= simple_form_for([@centre, @booking]) do |f| %>
          <%= f.association :dog, collection: Dog.where(user: current_user) %>
          <%= f.input :booking_date, as: :string, input_html:{id: 'flatpickr'} %>
          <%= f.submit :Submit, class: 'btn btn-success'%>
          <% end %>
      </div>
      <div class="col">

      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="qrShareWithFriendsModal" tabindex="-1" role="dialog" aria-labelledby="qrShareWithFriendsModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Share with Friends</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="qr">
          <%= @qr_svg.html_safe %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
