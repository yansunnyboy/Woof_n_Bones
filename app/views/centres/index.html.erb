<div class="container-fluid bg-primary ">
  <h2 class="p-5 mb-0 pb-0">Daycares</h2>
  <div class="bg-primary d-flex">
    <div class="m-5">
      <div class="icon">
        <span class="dot" style="background-color:#393E5B">
          <%= image_tag "icons8-guard-dog-100.png", class:"image", alt: "dog image" %>
        </span>
        <% if user_signed_in? %>
          <div class="card w-75">
            <%= link_to "Add your Daycare!", new_centre_path, class:"btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
      <div class="card-container">
      <% @centres.each do |centre| %>
        <% if user_signed_in? == false %>
          <div class="card w-75 bg-info">
            <div class="card-body">
              <div class="display-4"><%= centre.name%></div>
              <p class="card-text"><%= centre.location%></p>
              <p>Our Day Care Can Have</p>
              <div class="d-flex justify-content-center"><script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
              <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_m3lpL4.json"  background="transparent" alignment="centre" speed="1"  style="width: 100px; height: 100px;"  loop  autoplay></lottie-player></div>
              <div class="d-flex justify-content-center"><%= centre.capacity%> Dogs!</div>
                  <%= link_to "Book Now", centre_path(centre), class:"btn btn-warning" %>
              <div class="d-flex">
              </div>
            </div>
          </div>
        <% elsif user_signed_in? && (centre.user_id == @user.first.id) %>
        <div class="card w-75 bg-info">
            <div class="card-body">
              <div class="display-4"><%= centre.name%></div>
              <p class="card-text"><%= centre.location%></p>
              <p>Our Day Care Can Have</p>
              <div class="d-flex justify-content-center"><script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
              <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_m3lpL4.json"  background="transparent" alignment="centre" speed="1"  style="width: 100px; height: 100px;"  loop  autoplay></lottie-player></div>
              <div class="d-flex justify-content-center"><%= centre.capacity %> Dogs!</div>
                  <%= link_to "View Bookings", bookings_centre_path(centre.id) , class:"btn btn-warning" %>
                        <!-- Button trigger modal -->
                  <%= link_to "Edit Daycare", edit_centre_path(centre.id) , class:"btn btn-warning" %>
                  <%= link_to "Delete Daycare", centre_path(centre.id), method: :delete , class:"btn btn-danger" %>
                  <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#qrShareWithFriendsModal">
                    Share with Friends
                  </button>
                <!-- Modal -->
                <div class="modal fade" id="qrShareWithFriendsModal" tabindex="-1" role="dialog" aria-labelledby="qrShareWithFriendsModal" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Share with Friends</h5>
                        <button type="button" class="btn btn-warning" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <div class="qr">
                          <%= @qr_svg.html_safe %>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              <div class="d-flex">
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
